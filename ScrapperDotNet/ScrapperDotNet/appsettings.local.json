{
  "ConnectionStrings": {
    "ScrapperContext": "Server=.;Database=Scrapper;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "PageSaveLocation": "C:/Data/Pages",
  "Ai": {
    "OllamaModelName": "gemma3:12b",
    "OllamaEndpoint": "http://localhost:11434"
  },
  "Browser": {
    "HideUI": false
  },
  "WaitForUserActionOnBlockedPages": false,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:/temp/logs/scrapper.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
